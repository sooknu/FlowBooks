# ── Database ──────────────────────────────────────────────
DATABASE_URL=postgresql://postgres:localpass@localhost:5432/mydb

# ── Auth ──────────────────────────────────────────────────
BETTER_AUTH_SECRET=change-me-to-a-random-32-char-secret
BETTER_AUTH_URL=http://localhost:3002

# ── Server ────────────────────────────────────────────────
API_PORT=3002
CLIENT_ORIGIN=http://localhost:3000

# ── Redis (required for BullMQ background jobs) ──────────
REDIS_URL=redis://localhost:6379

# ── Passkey / WebAuthn (optional) ─────────────────────────
PASSKEY_RP_ID=localhost
PASSKEY_RP_NAME=My App

# ── Google OAuth (optional — leave empty to disable) ──────
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ── Custom OIDC provider (optional) ──────────────────────
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_DISCOVERY_URL=

# ── SMTP for email sending (optional) ────────────────────
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@example.com

# ── Stripe (optional — leave empty to disable) ───────────
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ── PayPal (optional — leave empty to disable) ───────────
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# ── Unsplash login background (optional) ─────────────────
# Configured via Settings UI, not env vars
